	<table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieudit</th>
                <th>Bagueur</th>
                <th>Espece</th>
                <th>Action</th>
                <th>Bague</th>
                <th>Secteur</th>
                <th>Terrier</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Sexe</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for puffin in puffins %}
            <tr>
                <td>{{ puffin.id }}</td>
				<td>{{ puffin.lieudit }}</td>
				<td>{{ puffin.bg }}</td>
                <td>{{ puffin.espece }}</td>
                <td>{{ puffin.action }}</td>
                <td>{{ puffin.bague }}</td>
                <td>{{ puffin.secteur }}</td>
                <td>{{ puffin.terrier }}</td>
                <td>{% if puffin.date %}{{ puffin.date|date('d-m-Y')}}{% endif %}</td>
                <td>{{ puffin.heure|date('H:m:s')}}</td>
                <td>{{ puffin.sexe }}</td>
                <td>{{ puffin.age }}</td>
                <td>
                <ul>
					<li > 
                        <a href="{{ path('parc_puffins_bag_fiche', { 'id': puffin.id }) }}">
							<img title="Voir details" src="{{asset('bundles/parcpuffinsbag/images/detail.ico')}}" width="24"/>
						</a>
                    </li>
					{% if is_granted('ROLE_COLLAB') %}
						<li>
							<a href="{{ path('parc_puffins_bag_modifier', { 'id': puffin.id }) }}">
								<img title="Modifier" src="{{asset('bundles/parcpuffinsbag/images/modifier.ico')}}" width="24"/>
							</a>
						</li>
					{% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
						<li>
							<a href="{{ path('parc_puffins_bag_supprimer', { 'id': puffin.id }) }}">
								<img title="Supprimer" src="{{asset('bundles/parcpuffinsbag/images/supprimer.ico')}}" width="24"/>
							</a>
						</li>
					{% endif %}                 
                </ul>
                </td>
            </tr>
		{% endfor %}
        </tbody>
    </table>