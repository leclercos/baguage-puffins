<div class="pagination">
	<ul>
		{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
		{% if nombrePage >1 %}
			{% set page_suiv =((page/nb_pg_aff)|round(0,'ceil'))*nb_pg_aff +1 %}
			
			{% if page>nb_pg_aff %}
				{% set page_prec =((page/(nb_pg_aff))|round(0,'floor'))*nb_pg_aff %}
				{% if page%nb_pg_aff == 0 %} {% set page_prec = (page/nb_pg_aff-1 )*nb_pg_aff%} {% endif %}
				<li>
					<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': 1}) }}" title="Debut" > <<</a>
				</li>
				<li>
					<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': page_prec}) }} " title="Pages {{page_prec-nb_pg_aff+1}} à {{page_prec}}">...</a>
				</li>
			{% endif %}
			
			{% if nombrePage < (nb_pg_aff+1) %}
				{% for p in range(1, nombrePage) %}					
					<li{% if p == page %} class="active"{% endif %}>						
						<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': p}) }}" title="Page {{p}}">{{ p}}</a>						
					</li>		
				{% endfor %}				
			{% elseif page_suiv < nombrePage %}
				{% for p in range(page_suiv-nb_pg_aff, page_suiv-1) %}					
					<li{% if p == page %} class="active"{% endif %}>						
						<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': p}) }}" title="Page {{p}}">{{ p}}</a>						
					</li>		
				{% endfor %}
			{% else%}				
				{% for p in range(page_suiv-nb_pg_aff, nombrePage) %}						
					<li{% if p == page %} class="active"{% endif %}>						
						<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': p}) }}" title="Page {{p}}">{{ p}}</a>						
					</li>		
				{% endfor %}
			{% endif %}			
			
			
			{% if page_suiv<nombrePage %}
				<li>
					<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': page_suiv}) }}" title="Pages {{page_suiv}} à {{page_suiv+nb_pg_aff-1}}">...</a>
				</li>
				<li>
					<a href="{{ path('parc_puffins_bag_liste', {'colonne': colonne, 'order': order, 'page': nombrePage}) }}" title="Fin (Page {{nombrePage}})"> >> </a>
				</li>
			{% endif %}
		{% endif %}
	</ul>
</div>